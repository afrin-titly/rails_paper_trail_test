
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
 
    <%= f.label :name %>
    <%= f.text_field :name , class: "form-control" %>

    <%= f.label :email %>
    <%= f.text_area :email , class: "form-control"%>

    <%= f.label :phone %>
    <%= f.text_area :phone , class: "form-control"%>

    <div id="butt">
    <%= f.submit "Create new user" ,class: "btn btn-primary" %>
  </div>
    <% end %>
  </div>
</div>